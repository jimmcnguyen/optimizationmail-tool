accountList = open("C:\\Users\\jnguyen\\PycharmProjects\\directories\\accounts.txt")


def password():
    chars = '123456789' + string.ascii_lowercase + string.ascii_uppercase
    password = ' '
    for c in range(12):
        password += random.choice(chars)
    return password.strip()

